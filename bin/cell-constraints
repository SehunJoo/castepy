#!/bin/bash

set -e

color='\033[1\0;31m'
endcolor='\033[0m'

function usage {
    echo 1>&2 -e $color
    echo 1>&2 -e "usage: $(basename $0) [on/off]"
    echo 1>&2 -e $endcolor
    echo 1>&2 "$(basename $0)  on"
    echo 1>&2 "$(basename $0)  off"
    echo 1>&2
    exit 1
}

# check before proceeding

if [ $# -lt 1 ]; then
    usage
fi

case $1 in
    on | off)
        constraints=$1
        ;;
    *)
        echo "invalid option: $1"
        usage
        ;;
esac

# main

for seed in $(ls *.cell | awk 'BEGIN {FS=".cell"} {print $1}')
do
    echo "$seed.cell"

    if [[ $constraints == "off" ]]
    then
        sed -i '/^%BLOCK IONIC_CONSTRAINTS/,/^%ENDBLOCK IONIC_CONSTRAINTS/d' $seed.cell
        sed -i '/^%#BLOCK IONIC_CONSTRAINTS/,/^%#ENDBLOCK IONIC_CONSTRAINTS/d' $seed.cell
    fi
done

exit 0
